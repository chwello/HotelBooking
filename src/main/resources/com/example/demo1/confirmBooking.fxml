<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox maxWidth="Infinity" maxHeight="Infinity" prefHeight="1000.0" prefWidth="1400.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.demo1.BookingController"
      stylesheets="@styles.css" style="-fx-background-color: #f9f9f9;">

    <!-- Header (Fixed) -->
    <HBox alignment="CENTER_LEFT" style="-fx-background-color: #1A1E43; -fx-padding: 10;">
        <Label text="Confirm Booking" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;"/>
    </HBox>

    <!-- Scrollable Content Area -->
    <ScrollPane VBox.vgrow="ALWAYS" fitToWidth="true" style="-fx-background-color: transparent; -fx-padding: 20;">
        <VBox spacing="20">
            <HBox spacing="20" alignment="TOP_LEFT">
                <!-- Left Section -->
                <VBox spacing="20" prefWidth="900">
                    <!-- Your Details Box -->
                    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #d3d3d3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                        <Label text="Your details" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        <GridPane hgap="10" vgap="10">
                            <Label text="First name :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            <Label text="Last name :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            <Label text="Phone Number :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            <Label text="Email Address :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                            <Label text="Salutation:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                            <Label text="Special requests to hotel:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <TextArea GridPane.rowIndex="5" GridPane.columnIndex="1" prefRowCount="3"/>
                        </GridPane>
                    </VBox>

                    <!-- Payment Information Box -->
                    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #d3d3d3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                        <Label text="Payment Information" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                        <GridPane hgap="10" vgap="10">
                            <Label text="Name on card:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                            <Label text="Credit Card Number :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            <Label text="Expiration Date :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                <ComboBox prefWidth="100"/>
                                <ComboBox prefWidth="100"/>
                            </HBox>
                            <Label text="CVV/CVC :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                            <TextField GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                        </GridPane>
                    </VBox>



                <!-- Right Section -->
                <VBox spacing="20" prefWidth="400">
                    <!-- Hotel Information Box -->
                    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #d3d3d3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                        <Label text="The Fullerton Hotel Singapore" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                        <Label text="1 Fullerton Square, 049178 Singapore" style="-fx-font-size: 12;"/>
                    </VBox>

                    <!-- Booking Details Box -->
                    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #d3d3d3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                        <Label text="Your booking details" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    </VBox>

                    <!-- Pricing Summary Box -->
                    <VBox spacing="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-border-color: #d3d3d3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                        <Label text="Pricing Summary" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </ScrollPane>

    <!-- Footer (Fixed) -->
    <HBox alignment="CENTER" style="-fx-padding: 20;">
        <Button text="Confirm and Proceed" style="-fx-background-color: #1A1E43; -fx-text-fill: white; -fx-font-size: 16; -fx-font-weight: bold;"/>
    </HBox>

</VBox>